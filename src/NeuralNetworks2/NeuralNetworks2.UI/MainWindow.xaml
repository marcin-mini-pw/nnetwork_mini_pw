<Window x:Class="NeuralNetworks2.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:views="clr-namespace:NeuralNetworks2.UI.Views"
        Title="Sieci neuronowe - projekt II"
        Height="350"
        Width="525"
        WindowStartupLocation="CenterScreen"
        >
    <DockPanel
        LastChildFill="True"
        >
        <Menu
            DockPanel.Dock="Top"
            >
            <MenuItem Header="_Plik">
                <MenuItem Header="Za_kończ" Command="{Binding Path=CloseCommand}" />
            </MenuItem>
        </Menu>
        
        <views:ListeningToVoicesView />
    </DockPanel>
</Window>
